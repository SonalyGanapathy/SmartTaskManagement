@model IEnumerable<SmartTaskManagement.Models.TaskItem>
@{
    Layout = null;
}

<!-- Bootstrap & Animate CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<style>
    /* Animated gradient background */
    body {
        min-height: 100vh;
        background: linear-gradient(135deg, #1e3c72, #2a5298, #21d4fd, #b721ff);
        background-size: 400% 400%;
        animation: gradientShift 15s ease infinite;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 3rem 1rem;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    @@keyframes gradientShift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    /* Main Card */
    .task-card {
        background-color: #ffffffd9;
        backdrop-filter: blur(8px);
        border-radius: 16px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        padding: 2rem;
        width: 100%;
        max-width: 900px;
        animation: fadeInUp 1s ease;
    }

    h2 {
        font-weight: 600;
        color: #2a2a2a;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .table {
        background-color: white;
        border-radius: 12px;
        overflow: hidden;
    }

    .table th {
        background-color: #f5f7fa;
        color: #333;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    .table td {
        vertical-align: middle;
    }

    .table tbody tr:hover {
        background-color: #f1f9ff;
        transition: 0.3s ease;
    }

    .btn-edit {
        background: linear-gradient(90deg, #21d4fd, #b721ff);
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 6px 14px;
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-edit:hover {
        background: linear-gradient(90deg, #b721ff, #21d4fd);
        transform: translateY(-2px);
        color: #fff;
    }

    .top-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .btn-add {
        background: linear-gradient(90deg, #00c851, #007e33);
        border: none;
        color: white;
        border-radius: 8px;
        padding: 8px 16px;
        font-weight: 500;
        text-decoration: none;
        transition: 0.3s ease;
    }

    .btn-add:hover {
        background: linear-gradient(90deg, #007e33, #00c851);
        transform: translateY(-2px);
        color: #fff;
    }
</style>

<div class="task-card animate__animated animate__fadeInUp">
    <div class="top-actions">
        <h2>Your Tasks</h2>
        <a href="@Url.Action("Create", "Task")" class="btn-add">+ Add Task</a>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Project</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center text-muted py-4">No tasks available. Start by adding a new one!</td>
                </tr>
            }
            else
            {
                foreach (var task in Model)
                {
                    <tr>
                        <td>@task.TaskId</td>
                        <td>@task.Status</td>
                        <td>@task.ProjectName</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", "Task", new { id = task.TaskId })" class="btn-edit">Edit</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
