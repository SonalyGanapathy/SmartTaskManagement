@model SmartTaskManagement.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;     // ChatGPT style page should not use your main layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - Task Management System</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Full page clean background like ChatGPT login */
        body {
            background: #f3f4f6;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
        }

        /* Center wrapper */
        .login-wrapper {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* ChatGPT style login card */
        .login-card {
            width: 420px;
            padding: 35px;
            border-radius: 16px;
            background: white;
            box-shadow: 0px 8px 25px rgba(0, 0, 0, 0.12);
            animation: fadeIn 0.4s ease-in-out;
        }

        /* Header title */
        .login-title {
            font-size: 26px;
            font-weight: 700;
            color: #111827;
        }

        /* Smooth fade animation */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-label {
            font-weight: 600;
            color: #374151;
        }

        .form-control {
            padding: 0.65rem;
            border-radius: 10px;
        }

        .btn-login {
            background-color: #2563eb;
            border: none;
            padding: 12px;
            font-size: 16px;
            border-radius: 10px;
        }

        .btn-login:hover {
            background-color: #1e40af;
        }

        .signup-link {
            text-decoration: none;
            color: #2563eb;
        }

        .signup-link:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <div class="login-wrapper">
        <div class="login-card">

            <h2 class="text-center login-title mb-4">Task Management Login</h2>

            <!-- Validation -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger text-center p-2">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-0" })
                </div>
            }

            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <!-- Email -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.EmailAddress, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", placeholder = "name@example.com" })
                </div>

                <!-- Password -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Your password" })
                </div>

                <!-- Login Button -->
                <button type="submit" class="btn btn-primary w-100 btn-login">Login</button>

                <!-- Signup link -->
                <div class="text-center mt-3">
                    <span>New here?</span>
                    <a href="@Url.Action("SignUp", "Account")" class="signup-link fw-bold">Create Account</a>
                </div>
            }
        </div>
    </div>

</body>
</html>
